<?xml version="1.0" encoding="UTF-8"?>

<config>
	<database>
		<property name="driverClassName">com.mysql.jdbc.Driver</property>
		<property name="url">jdbc:mysql://localhost:3306/orm?useUnicode=true&amp;characterEncoding=utf8</property>
		<property name="username">root</property>
		<property name="password">123456</property>
	</database>
	
	<bean name="userDao" value="dao.UserDao"/>
	<bean name="bookDao" value="dao.BookDao"/>
	
	<result-map name="user" type="pojo.User">
		<property name="id"/>
		<property name="name"/>
		<property name="flag"/>
		<property name="email"/>
		<property name="password"/>
	</result-map>

	<result-map name="book" type="pojo.Book">
		<property name="id"/>
		<property name="name"/>
		<property name="comment"/>
		<property name="finishTime"/>
		<property name="author" value="authorId"/>
	</result-map>
</config>
